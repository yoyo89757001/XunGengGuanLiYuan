<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/ll_bg"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:minHeight="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="80dp"
            android:layout_height="match_parent">
                <TextView
                    android:text="9"
                    android:textSize="18sp"
                    android:textColor="@color/hui"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/bianhao"
                    android:background="@drawable/yuan_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/zhuangtai"
                    android:textSize="18sp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="18sp"
                    android:text="编号"
                    android:layout_toLeftOf="@+id/zhuangtai"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bianhao"
                    android:layout_marginTop="16dp"
                    android:id="@+id/bianhao2"
                    android:textColor="@color/zi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="16sp"
                    android:text="地址"
                    android:id="@+id/dizhi"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/zhuangtai"
                    android:layout_below="@+id/bianhao2"
                    android:layout_toRightOf="@+id/bianhao"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/zi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>





</LinearLayout>